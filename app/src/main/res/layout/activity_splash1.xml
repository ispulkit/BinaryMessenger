<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#45a4af"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="binary.splash.Splash1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:visibility="invisible"
        android:id="@+id/tv1_splash"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv2_splash"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv3_splash"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="25dp"
        android:id="@+id/tv4_splash" />
    <ImageView
        android:layout_width="wrap_content"
        android:translationZ="150dp"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_height="225dp"
        android:src="@drawable/binary_logo"
        android:id="@+id/imageView_splash_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:id="@+id/tv5_splash"
        android:text="Binary Messenger"
        android:visibility="invisible"
        android:layout_below="@+id/imageView_splash_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:id="@+id/tv6_splash"
        android:text="A new way to chat"
        android:layout_below="@+id/tv5_splash"/>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_send_white_24dp"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        app:layout_anchorGravity="bottom|right|end"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv4_splash"
        app:backgroundTint="@color/colorPrimaryDark"
        android:translationZ="150dp"
        android:id="@+id/floating_b1"
        app:rippleColor="@color/colorPrimaryDark"
        android:layout_alignRight="@+id/imageView_splash_logo"
        android:layout_alignEnd="@+id/imageView_splash_logo" />

</RelativeLayout>
